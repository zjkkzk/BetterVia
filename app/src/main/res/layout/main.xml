<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- WebView背景层 - 全屏流光效果 -->
    <WebView
        android:id="@+id/flow_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- 内容层 - 完全透明 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- 自定义ActionBar -->
        <RelativeLayout
            android:id="@+id/custom_actionbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/module_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/module_status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_more"
                android:background="?android:attr/selectableItemBackground"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <!-- 主要内容区域 -->
        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 标题和作者信息 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:shadowColor="#33000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/by_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/by_author"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:letterSpacing="0.01" />

            </LinearLayout>

            <!-- 联系方式区域 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="48dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/blog_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blog_link"
                    android:textColor="@color/primary_blue"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground" />

                <View
                    android:id="@+id/contact_divider"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/gray"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/email_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_email"
                    android:textColor="@color/primary_blue"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground" />

            </LinearLayout>

            <!-- 图标区域 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/github_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_github"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:contentDescription="GitHub"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/gitee_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_gitee"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:contentDescription="Gitee"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/xposed_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_xposed"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:contentDescription="Xposed Repository"
                    android:scaleType="centerInside" />

            </LinearLayout>

        </LinearLayout>

        <!-- 版本信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_info"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/copyright_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright_info"
                android:textColor="#888888"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
